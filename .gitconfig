# This is Git's per-user configuration file.
[user]
        name = Mike Hu
        email = m@mikehu.com
[alias]
        p = push
        r = pull --rebase
        st = status -sb
        ll = log --oneline
        last = log -1 HEAD --stat
        a = add
        c = commit
        ca = commit --amend
        co = checkout
        b = checkout -b
        bd = branch -D
        bl = branch --list
        clone-worktrees = "!sh $XDG_CONFIG_HOME/scripts/git-clone-bare-for-worktrees.sh"
        cw = clone-worktrees
        init-worktree = "!sh $XDG_CONFIG_HOME/scripts/git-init-worktree.sh"
        iw = init-worktree

[help]
        autocorrect = 20

[rerere]
        enabled = true

[init]
        defaultBranch = main

[pull]
        rebase = true

[core]
        pager = delta

[interactive]
        diffFilter = delta --color-only --show-syntax-themes

[delta]
        navigate = true    # use n and N to move between diff sections
        side-by-side = true
        line-numbers = true

[merge]
        conflictstyle = diff3

[diff]
        colorMoved = default
